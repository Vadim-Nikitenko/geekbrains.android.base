<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/listItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:textSize="@dimen/weather_for_the_week_text_size"
        android:textColor="@color/colorBlack"
        android:paddingStart="@dimen/default_horizontal_margin"
        android:paddingEnd="@dimen/default_horizontal_margin"
        android:paddingTop="@dimen/half_default_vertical_margin"
        android:paddingBottom="@dimen/half_default_vertical_margin"
        android:lines="1"
        android:ellipsize="end" />

</FrameLayout>